                <h2 class="title-user black  ma0 flex justify-between">Lekhak</h2>
            </a>
           
            <a class="wft bg-white bn " href="/search"> <img src="2.jpg" class="w-100 fr" height="30px" alt="search-image"></a>

        </div>
         
            <div class="articles">

            
            <% for(var i = 0; i < data.length; i++)  {  %>
                <div class="  bg-white w-90 mv3 tc center ph3 pv1 br3">
            <h3 class="f3  tc br3 bg-black white  pa1 ph3 wft"><%= data[i].title %></h3>
            
            <p class="tj"><%= data[i].content %></p>
            <p class=" bg-light-gray black  pa2 br3 wft"><%= data[i].cato %></p>
        </div>
            <% } %>
      
 
        </div>

        
        




    </div>
